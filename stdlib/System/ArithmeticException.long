namespace System

use System.RuntimeException

// ArithmeticException 算术异常
// 当发生异常的算术条件时抛出，例如除以零
class ArithmeticException extends RuntimeException {
    
    // 构造函数
    public function __construct(message: string = "Arithmetic error") {
        super::__construct(message, 0)
    }
    
    // 转换为字符串
    public function toString() string {
        return "ArithmeticException: " + this.getMessage()
    }
}
